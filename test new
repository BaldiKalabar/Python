bot=int(input("Привет.Тебе дано 5 задач.Можно решать в любом порядке.Выбери номер: "))
rs1=False
rs2=False
rs3=False
rs4=False
rs5=False
result=False

if bot==1:
     sm=input("Введи  улыбающийся смайлик с помощью клавиатуры(2 символа):")
     pol=":)"
     while (pol!=sm):
        sm=input("Ответ засчитан")
     rs1=True
elif  bot==2:
     ot=input("Загадка на логику: Электричка едет со скоростью 70 км/ч.С какой скоростью выходит дым из трубы электрички?")
     pol="У электрички нет трубы"
     while(pol!=ot):
        ot=input("Ответ засчитан")
     rs2=True 
elif bot==3:
     rt=input("Реши пример: 1+1*1:1-1= ")
     pol="1"
     while(pol!=rt):
        rt=input("Ответ засчитан")
     rs3=True
elif bot==4:
     po=input("Катя старше Вали, а Нина старше Кати, но младше Светы.Кто самая младшая?")
     pol="Валя"
     while(pol!=po):
         po=input("Ответ засчитан")
     rs4=True
elif  bot==5:
     we=input("Найди х:7x+9=100: ") 
     pol="13"
     while(pol!=we):
         we=input("Ответ засчитан")
     rs5=True
if rs1==True:
    print("Задача  1 решена верно")
else:
     print("Задача 1 решена неверно.Правильный ответ: :)")
if rs2==True:
    print("Задача 2 решена верно")
else:
     print("Задача 2 решена неверно.Правильный ответ: У электрички нет трубы")     
if rs3==True:
    print("Задача 3 решена верно")
else:
     print("Задача 3 решена неверно.Правильный ответ: 1")    
if rs4==True:
    print("Задача 4 решена верно")
else:
     print("Задача 4 решена неверно.Правильный ответ: Валя")    
if rs5==True:
    print("Задача 5 решена верно")
else:
     print("Задача 5 решена неверно.Правильный ответ: 13")          
 
